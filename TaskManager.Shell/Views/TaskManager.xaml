<Window x:Class="TaskManager.Shell.Views.TaskManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
        xmlns:prism="http://prismlibrary.com/"
        mc:Ignorable="d"
        Background="{x:Static SystemColors.ControlBrush}"
        prism:ViewModelLocator.AutoWireViewModel="True"
        d:DesignHeight="450" d:DesignWidth="800"
        Title="TaskManager">
    
    <dxdo:LayoutGroup Orientation="Vertical">
        <dxdo:LayoutGroup Orientation="Horizontal" ItemHeight="0.2*">
            <dxdo:LayoutPanel ShowCloseButton="False" ShowPinButton="False" AllowMove="False" VerticalAlignment="Top" ItemHeight="*"
                              ShowCaption="False">
                <ContentControl prism:RegionManager.RegionName="TaskManagerToolBar"/>
            </dxdo:LayoutPanel>
        </dxdo:LayoutGroup>
                        
        <dxdo:LayoutPanel  ShowCloseButton="False" ShowPinButton="False"
                           AllowMove="False">
            <ContentControl prism:RegionManager.RegionName="TaskManagerGanttControl"/>
        </dxdo:LayoutPanel>
    </dxdo:LayoutGroup>
</Window>
